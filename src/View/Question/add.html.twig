{% extends 'layout.html.twig' %}

{% block content %}
        <h2>Add a new question</h2>
        <form method="post">
            <label for="theme_id">Theme</label>
            <select name="theme_id">
            {% for theme in themes %}
                <option value="{{ theme.id }}">{{ theme.name }}</option>
            {% endfor %}
            </select>
            <br>
            <label for="title">Title</label>
            <input type="text" name="name" placeholder="Question Title">
            <br>
            <label for="answer1">Answer 1</label>
            <input type="text" name="answer1" placeholder="First Answer">
            <br>
            <label for="answer2">Answer 2</label>
            <input type="text" name="answer2" placeholder="Second Answer">
            <br>
            <label for="answer3">Answer 3</label>
            <input type="text" name="answer3" placeholder="Third Answer">
            <br>
            <label for="answer4">Answer 4</label>
            <input type="text" name="answer4" placeholder="Fourth Answer">
            <br>
            <label for="clue">Clue</label>
            <input type="text" name="clue" placeholder="clue">
            <br>
            <fieldset>
                <legend>Which answer is the right one?</legend>
                <input type="radio" name="correct" value="1" checked>
                <label for="1">1</label>
                <input type="radio" name="correct" value="2">
                <label for="2">2</label>
                <input type="radio" name="correct" value="3">
                <label for="3">3</label>
                <input type="radio" name="correct" value="4">
                <label for="4">4</label>
            </fieldset>
            <br>
            <input type="submit" value="Submit">
        </form>
{% endblock %}
